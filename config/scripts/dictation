#!/usr/bin/env bash
# Push-to-talk dictation wrapper for hyprflow
# Usage: dictation start|stop|reset

# Config - use same paths as hyprflow (hardcoded for speed)
WHISPER_BIN="/nix/store/dwdby91qwv3k8y8qyvvpg5l893v5i4k7-whisper-cpp-1.8.2/bin/whisper-cli"
WHISPER_MODEL="/nix/store/m1j9app6vkpwiiwg9wrzqd3q8nn0prr6-hyprflow-2025-12-09/share/hyprflow/ggml-base.en.bin"
RECORDING_DIR="$HOME/.cache/hyprflow/recordings"
TRANSCRIPT_DIR="$HOME/.cache/hyprflow/transcripts"
STATE_FILE="/tmp/dictation.state"
KEEP_VERSIONS=5

# Hyprland visual settings (defaults to restore)
DEFAULT_BORDER="0xeecba6f7 0xeef5c2e7 45deg"
RECORDING_BORDER="0xee89dceb 0xee89dceb 45deg"

mkdir -p "$RECORDING_DIR" "$TRANSCRIPT_DIR"

# Reset Hyprland to normal state (safety function)
reset_hyprland() {
    # hyprctl keyword general:col.active_border "$DEFAULT_BORDER" >/dev/null 2>&1
    # hyprctl keyword decoration:active_opacity 1.0 >/dev/null 2>&1
    # hyprctl keyword decoration:inactive_opacity 1.0 >/dev/null 2>&1
    : # No-op
}

# Apply recording visual effects
apply_recording_effects() {
    # hyprctl keyword general:col.active_border "$RECORDING_BORDER" >/dev/null 2>&1
    # Transparency on all windows - blur shows through
    # hyprctl keyword decoration:active_opacity 0.65 >/dev/null 2>&1
    # hyprctl keyword decoration:inactive_opacity 0.65 >/dev/null 2>&1
    : # No-op
}

start_recording() {
    # Don't start if already recording
    if [ -f "$STATE_FILE" ]; then
        return 0
    fi

    TIME=$(date +%s)
    echo "TIME=$TIME" > "$STATE_FILE"
    RECORDING_FILE="${RECORDING_DIR}/${TIME}.wav"

    # Apply Hyprland visual effects
    apply_recording_effects

    # Start recording
    pw-record --rate 16000 --channels 1 "$RECORDING_FILE" 2>/dev/null &
    echo "PID=$!" >> "$STATE_FILE"

    # Animation loop removed for Quickshell
}

stop_recording() {
    # Don't stop if not recording
    if [ ! -f "$STATE_FILE" ]; then
        return 0
    fi

    source "$STATE_FILE"

    # Stop recording
    if [ -n "$PID" ]; then
        kill "$PID" 2>/dev/null
    fi
    pkill -f "pw-record.*hyprflow" 2>/dev/null

    # Reset visuals immediately (before transcription)
    rm -f "$STATE_FILE"
    reset_hyprland
    # pkill -RTMIN+8 waybar 2>/dev/null

    RECORDING_FILE="${RECORDING_DIR}/${TIME}.wav"
    TRANSCRIPT_FILE="${TRANSCRIPT_DIR}/${TIME}_raw.txt"

    if [ -f "$RECORDING_FILE" ]; then
        # Transcribe
        "$WHISPER_BIN" -m "$WHISPER_MODEL" -f "$RECORDING_FILE" \
            --no-prints --no-timestamps > "$TRANSCRIPT_FILE" 2>/dev/null

        # Clean up, copy to clipboard, and paste
        TEXT=$(sed 's/^[[:space:]]*//;s/[[:space:]]*$//' "$TRANSCRIPT_FILE" | tr -d '\n')

        if [ -n "$TEXT" ]; then
            echo -n "$TEXT" | wl-copy
            # Small delay to ensure clipboard is ready
            sleep 0.1
            hyprctl dispatch sendshortcut "CTRL SHIFT, V, activewindow"
        fi
    fi

    # Cleanup old files
    if [ "$KEEP_VERSIONS" -gt 0 ]; then
        ls -1t "$RECORDING_DIR"/*.wav 2>/dev/null | tail -n +$((KEEP_VERSIONS + 1)) | xargs -r rm -f
        ls -1t "$TRANSCRIPT_DIR"/*_raw.txt 2>/dev/null | tail -n +$((KEEP_VERSIONS + 1)) | xargs -r rm -f
    fi
}

case "${1:-}" in
    start)
        start_recording
        ;;
    stop)
        stop_recording
        ;;
    reset)
        # Manual reset if effects get stuck
        reset_hyprland
        rm -f "$STATE_FILE"
        # pkill -RTMIN+8 waybar 2>/dev/null
        ;;
    *)
        echo "Usage: dictation start|stop|reset"
        exit 1
        ;;
esac
