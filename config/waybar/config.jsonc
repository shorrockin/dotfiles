{
  "layer": "top",
  "position": "top",
  "height": 28,
  "spacing": 8,

  "modules-left": [
    "custom/notifications",
    // "tray",
    "pulseaudio",
    "custom/controller"
  ],

  "modules-center": [
    "hyprland/workspaces"
  ],

  "modules-right": [
    "mpris",
    "clock",
    "custom/weather",
    "custom/power"
  ],

  // Left modules

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ùü",
    "format-icons": {
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
    },
    "on-click": "pavucontrol",
    "tooltip-format": "{desc}\n{volume}%",
    "scroll-step": 5
  },

  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{player_icon} <i>{dynamic}</i>",
    "format-stopped": "",
    "player-icons": {
      "default": "‚ñ∂",
      "mpv": "üéµ",
      "spotify": ""
    },
    "status-icons": {
      "paused": "‚è∏",
      "playing": "‚ñ∂"
    },
    "dynamic-order": ["title", "artist"],
    "dynamic-len": 30,
    "dynamic-separator": " - ",
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "ignored-players": []
  },

  // Center modules
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "show-special": false
  },

  // Right modules
  "clock": {
    "format": "üóìÔ∏è {:%a %b %e  üïê %I:%M %p}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#f9e2af'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weeks": "<span color='#f5c2e6'><b>W{}</b></span>",
        "weekdays": "<span color='#f5c2e6'><b>{}</b></span>",
        "today": "<span color='#f5c2e6'><b><u>{}</u></b></span>"
      }
    }
  },

  "custom/notifications": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": "<span foreground='#f9e2af'>Û∞Çö</span>",
      "none": "Û∞Çö",
      "dnd-notification": "<span foreground='#f9e2af'>Û∞Çõ</span>",
      "dnd-none": "Û∞Çõ"
    },
    "return-type": "json",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  "custom/controller": {
    "format": "{}",
    "return-type": "json",
    "exec": "~/.config/scripts/controller-battery",
    "interval": 30,
    "tooltip": true
  },

  "custom/weather": {
    "format": "{}¬∞",
    "return-type": "json",
    "exec": "wttrbar --custom-indicator '{ICON} {temp_C}' --hide-conditions --nerd",
    "interval": 3600,
    "tooltip": true
  },

  "tray": {
    "icon-size": 16,
    "spacing": 8
  },

  "custom/power": {
    "format": "‚èª",
    "tooltip": false,
    "menu": "on-click",
    "menu-file": "~/.config/waybar/power_menu.xml",
    "menu-actions": {
      "about": "ghostty --title=fastfetch -e fish -c 'fastfetch -c popup; read -P \"Press Enter to close...\"'",
      "activity": "ghostty -e btop",
      "suspend": "systemctl suspend",
      "reboot": "systemctl reboot"
    }
  }
}
