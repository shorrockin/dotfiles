# This is the configuration file for Ghostty.
#
# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.
#
# Additionally, each config option is also explained in detail
# on Ghostty's website, at https://ghostty.org/docs/config.
#
# ctrl-shift-, to reload
theme = catppuccin-mocha.conf

window-padding-x = 16,16
window-padding-y = 16,16
window-decoration = "none"
background-opacity = 0.9
background-blur-radius = 20

font-family = "MesloLGS Nerd Font Mono"
font-size = 16

# macOS font rendering improvements (no effect on Linux)
# strength is a value between 0 and 255
font-thicken = true
font-thicken-strength = 100

clipboard-read = allow
clipboard-write = allow

keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

keybind = ctrl+0=text:\x1b[48;5u
keybind = ctrl+1=text:\x1b[49;5u
keybind = ctrl+2=text:\x1b[50;5u
keybind = ctrl+3=text:\x1b[51;5u
keybind = ctrl+4=text:\x1b[52;5u
keybind = ctrl+5=text:\x1b[53;5u
